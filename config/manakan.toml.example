# vim: ft=toml

[host.example-chatwork]
url = "https://api.chatwork.com"
path = "/v2/rooms/{{ROOM_ID}}/messages"
header.accept = "application/json"
header.content-type = "application/x-www-form-urlencoded"
header.x-chatworktoken = "{{CHATwORK_TOKEN}}"
data.self_unread = 0
message = "body"

[host.example-discord]
url = "https://discord.com"
path = "{{WEBHOOK_PATH}}"
header.content-type = "application/json"
data.username = "{{YOUR_NAME}}"
data.avatar_url = "{{YOUR_AVATAR_URL}}"
message = "content"
